<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dao.ProductCategoryMapper">
<select id="itemTitle" resultType="com.entity.ProductCategory">
        SELECT * from easybuy_product_category WHERE type=1 ORDER BY id
    </select>
<select id="subtitle" resultType="com.entity.ProductCategory" parameterType="java.lang.Integer">
       SELECT * from easybuy_product_category where parentId=#{parentId}
    </select>
</mapper>